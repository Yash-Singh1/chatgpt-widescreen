{
    "manifest_version": 3,
    "name": "ChatGPT Widescreen Mode",
    "version": "2023.04.04",
    "author": "Adam Lui",
    "description": "Adds Widescreen + Full-Window modes to ChatGPT for enhanced viewing + reduced scrolling",
    "icons": { "128": "icons/icon128.png", "48": "icons/icon48.png", "16": "icons/icon16.png" },
    "permissions": [ "storage", "tabs" ],
    "action": { "default_popup": "popup/index.html" },
    "web_accessible_resources": [{
        "matches": ["<all_urls>"],
        "resources": ["lib/settings-utils.js", "lib/chatgpt.js"]
    }],
    "content_scripts": [{
        "matches": ["https://chat.openai.com/*", "https://freegpt.one/*"],
        "js": ["content.js"]
    }],
    "background": { "service_worker": "background.js" }
}